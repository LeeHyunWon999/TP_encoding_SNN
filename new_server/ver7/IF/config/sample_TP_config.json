{
    "device" : {
        "gpu" : "0",
        "cuda" : "cuda"
    },

    "executor" : {
        "type" : "trainer",
        "args" : {
            "random_seed" : 999,
            "k_folds" : 5,
            "num_epochs" : 1000,
            "early_stop_epoch" : -1,
            
            "optimizer" : {
                "type" : "Adam",
                "lr" : 0.001
            },

            "scheduler" : {
                "type" : "CosineAnnealingLR",
                "args" : {
                    "T_max" : 5,
                    "eta_min" : 0.00001
                }
            },

            "checkpoint" : {
                "active" : true,
                "path" : "/home/hschoi/data/leehyunwon/ECG-SNN/"
            }
        }
    },
    
    "data_loader": {
        "type" : "CinC",
        "args" : {
            "batch_size" : 256,
            "num_workers" :8,
            "train_path" :  "",
            "test_path" : ""
        }
    
    },

    "model" : {
        "type" : "burst",
        "args" : {
            "type_args" : {
                "encoder_min" : 0.2,
                "encoder_max" : 2.0
            },
        "input_size" : 187,
        "hidden_size" : 1024,
        "num_classes" : 2,
        "threshold" : 1.0,
        "need_bias" : true,
        "reset_value_residual" : false
        }
    },
    
    "loss" :{
        "type" : "MSE_loss",
        "weight" : [1.0, 4.0]
    },

    "metric" : [
        "Loss", "Acc", "F1_micro", "F1_macro", "AUROC_macro", "AUROC_weighted", "AUPRC"
    ],

    "tensorboard": {
        "active" : true,
        "path" : "./tensorboard/"
    }
}